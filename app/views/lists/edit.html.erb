<div class="flex items-center justify-center p-12">
  <div class="mx-auto w-full max-w-[550px]">
    <%= simple_form_for @object do |f| %>
      <div class="mb-5">
        <label for="name" class="mb-3 block text-base font-medium text-[#07074D]">
          Книга
        </label>
        <%= f.label :book_ids, "Книги" %>
        <%= f.collection_select :book_ids, Book.all, :id, :title, prompt: true, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
      </div>
      <div>
        <%= f.button :submit, "Сохранить", class: "hover:shadow-form rounded-md bg-blue-500 py-3 px-8 text-base font-semibold text-white outline-none" %>
      </div>
    <% end %>
  </div>
</div>
