<div class="flex items-center min-h-screen dark:bg-white-900">
  <div class="container mx-auto">
    <div class="max-w-md mx-auto my-10">
      <div class="text-center">
        <h1 class="my-3 text-3xl font-semibold text-black-700 dark:text-black-200">Sign in</h1>
        <p class="text-black-500 dark:text-black-400">Sign in to access your account</p>
      </div>
      <div class="m-7">
        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <%= f.error_notification %>
          <div class="mb-6">
            <label for="email" class="block mb-2 text-sm text-black-600 dark:text-black-400">Email Address</label>
            <%= f.input :email,
                        required: false,
                        label: false,
                        autofocus: true,
                        input_html: { autocomplete: "email" },
                        class: "w-full px-3 py-2 placeholder-black-300 border border-black-300 rounded-md focus:outline-none focus:ring focus:ring-indigo-100 focus:border-indigo-300 dark:bg-black-700 dark:text-white dark:placeholder-black-500 dark:border-black-600 dark:focus:ring-black-900 dark:focus:border-black-500"%>
          </div>
          <div class="mb-6">
            <div class="flex justify-between mb-2">
              <label for="password" class="text-sm text-black-600 dark:text-black-400">Password</label>
              <a>
                <%= link_to "Forgot password?", new_password_path(resource_name), class: "text-sm text-black-400 focus:outline-none focus:text-indigo-500 hover:text-indigo-500 dark:hover:text-indigo-300" %>
              </a>
            </div>
            <%= f.input :password,
                        required: false,
                        label: false,
                        input_html: { autocomplete: "current-password" },
                        class: "w-full px-3 py-2 placeholder-black-300 border border-black-300 rounded-md focus:outline-none focus:ring focus:ring-indigo-100 focus:border-indigo-300 dark:bg-black-700 dark:text-white dark:placeholder-black-500 dark:border-black-600 dark:focus:ring-black-900 dark:focus:border-black-500" %>
          </div>
          <div class="mb-6">
            <label for="remember" class="font-medium text-gray-900">
              <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
            </label>
          </div>
          <div class="mb-6">
            <%= f.button :submit, "Log In", class:"w-full px-3 py-4 text-white bg-green-500 rounded-md focus:bg-indigo-600 focus:outline-none" %>
          </div>
          <p class="text-sm text-center text-gray-400">Don&#x27;t have an account yet?
            <a>
            <%= link_to "Sign up", new_registration_path(resource_name), class: "text-indigo-400 focus:outline-none focus:underline focus:text-indigo-500 dark:focus:border-indigo-800"  %>
            </a>.
          </p>
        <% end %>
      </div>
    </div>
  </div>
</div>
