<p> Add Author </p>

<div>
  <%= form_with model: @collection, method: :post, url: authors_path, local: true do |f| %>
    <p> First name: <%= f.text_field :firstname %> </p>
    <p> Last name: <%= f.text_field :lastname %> </p>
    <div class="text-center">
      <%= f.submit 'Create author', class: 'btn btn-success' %>
    </div>
  <% end %>
</div>