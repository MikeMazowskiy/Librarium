<div class="mx-auto w-full max-w-[550px]">
    <div class="max-w-2xl mx">
        <%= simple_form_for @object do |f| %>
          <div class="mb-5 mt-6">
            <label for="subject" class="mb-3 block text-base font-medium text-[#07074D]">
              Description
            </label>
            <%= f.input :text,  label: false, required: true, class: "w-full rounded-md border border-[#e0e0e0] bg-white py-3 px-6 text-base font-medium text-[#6B7280] outline-none focus:border-[#6A64F1] focus:shadow-md" %>
          </div>
          <div>
            <%= f.button :submit, "Сохрнаить", class: "hover:shadow-form rounded-md bg-[#6A64F1] py-3 px-8 text-base font-semibold text-white outline-none" %>
          </div>
        <% end %>
    </div>
</div>
