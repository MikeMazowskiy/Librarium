        </div>
        <div class="relative flex gap-4">
          <% if review.profile.image.present? %>
            <%= image_tag review.profile.image_url, class: "w-8 h-8 rounded-full" %>
          <% else %>
            <%= image_tag Avatarro.image(review.profile.nickname, color: '#fff', start: '#9CA3AF', finish: '#9CA3AF'), class: "w-8 h-8 rounded-full" %>
          <% end %>
          <div class="flex flex-col w-full">
            <div class="flex flex-row justify-between">
              <p class="relative text-xl whitespace-nowrap truncate overflow-hidden">
                <%= link_to review.profile.nickname, profile_path(review.profile), class: 'font-bold hover:text-blue-600' %>
              </p>
              <a class="text-gray-500 text-xl" href="#"><i class="fa-solid fa-trash"></i></a>
            </div>
            <p class="text-gray-400 text-sm"><%= review.created_at.to_date %></p>
          </div>
        </div>
        <p class="mt-2 ml-2">
          <% review.text.split(' ').each do |word| %>
            <% if word.start_with?('#') %>
              <%= link_to word, tags_path(query: word, entity: review.class) %>
            <% else %>
              <%= word %>
            <% end %>
          <% end %>
        </p>
        <button type="button" class="mt-3 h-8 px-4 py-1 font-semibold rounded-xl bg-yellow-500 hover:bg-yellow-600 text-white text-center">
          <%= link_to "Комментировать", review_path(review) %>
        </button>
      </div>
    <% end %>
  </div>
</div>